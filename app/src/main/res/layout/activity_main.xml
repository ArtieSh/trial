<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:baselineAligned="false"
    android:orientation="vertical"

    tools:context="com.example.trial.app.MainActivity">

    <TextView
            android:id="@+id/show_me"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/default_text"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="40dp"
            />

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

        <EditText
                android:id="@+id/paste_me"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="@string/print_me"

                />


    <Button
            android:id="@+id/push_me"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/push_me"
            android:onClick="do_job"
            android:layout_weight="1"
            android:clickable="true"/>


    <Button
            android:id="@+id/clear_me"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/clear_me"
            android:onClick="clear_it"
            android:clickable="true"
            android:layout_weight="1"
            />

   </LinearLayout>



</LinearLayout>
